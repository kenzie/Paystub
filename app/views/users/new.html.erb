<h2>Create Account</h2>

<%= form_for @user, :url => user_path do |f| %>
<%= render "shared/error_messages", :target => @user %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p class="actions"><%= f.submit 'Create Account' %></p>
<% end %>